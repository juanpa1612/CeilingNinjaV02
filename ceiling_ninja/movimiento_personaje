public class movimiento_personaje : MonoBehaviour {
    public KeyCode movIzq;
    public KeyCode movDer;

    public float horzVel = 0;
    public int laneNum = 2;
    public string controlLocked = "n";

	void Start () {
	
	}
	
	// Update is called once per frame
	void Update () {
        GetComponent<Rigidbody>().velocity = new Vector3(horzVel, 0, 4);

        if ((Input.GetKeyDown(movIzq)) && (laneNum>1) && (controlLocked == "n"))
        {
            horzVel = -2;
            StartCoroutine(stopSlide());
            laneNum -= 1;
            controlLocked = "y";
        }
        if ((Input.GetKeyDown(movDer)) && (laneNum <3) && (controlLocked == "n"))
        {
            horzVel = 2;
            StartCoroutine(stopSlide());
            laneNum += 1;
            controlLocked = "y";
        }
    }
    IEnumerator stopSlide()
    {
        yield return new WaitForSeconds(.5f);
        horzVel = 0;
        controlLocked = "n";
    }
}
